---
/**
 * HierarchyDiagram - Shows the hierarchical supervision structure
 * of agents in Gastown using Figma-exported SVGs
 **/
import TradGit from "./trad-git.svg?raw";
---

<figure class="diagram-container">
    <div class="desktop-diagram" set:html={TradGit} />
</figure>

<style>
    .diagram-container {
        padding: var(--space-s) 0 var(--space-xl) 0;
        width: 100%;
        overflow: hidden;
    }

    .desktop-diagram :global(svg) {
        width: 100%;
        height: auto;
        max-width: 660px;
        display: block;
        margin: 0 auto;
    }

    @media (max-width: 660px) {
        .desktop-diagram :global(svg) {
            max-width: 100%;
        }
    }

    .desktop-diagram {
        display: block;
    }

    /* Dark mode styles */
    @media (prefers-color-scheme: dark) {
        /* White backgrounds/fills → dark */
        .desktop-diagram :global(svg [fill="white"]) {
            fill: #2d2b28;
        }

        /* Black fills → light (for contrast inversion) */
        .desktop-diagram :global(svg [fill="black"]) {
            fill: #d4d1cc;
        }

        /* Medium gray text → lighter */
        .desktop-diagram :global(svg [fill="#74706D"]) {
            fill: #a8a5a0;
        }

        /* Crimson fill → bright pink */
        .desktop-diagram :global(svg [fill="#960563"]) {
            fill: #f5a0d0;
        }

        /* Crimson stroke → bright pink */
        .desktop-diagram :global(svg [stroke="#960563"]) {
            stroke: #f5a0d0;
        }

        /* Coral stroke → brighter */
        .desktop-diagram :global(svg [stroke="#FD8270"]) {
            stroke: #ff9a8a;
        }

        /* Teal stroke → brighter */
        .desktop-diagram :global(svg [stroke="#028BA3"]) {
            stroke: #2bc4da;
        }
    }
</style>
