---
/**
 * SectionSteps - Renders steps format content
 * 
 * Displays items as numbered steps with optional details
 */

export interface StepItem {
  label: string;
  details?: string;
}

export interface Props {
  items: StepItem[];
}

const { items } = Astro.props;
---

<div class="steps-container">
  <ol class="steps-list" role="list">
    {items.map((item, index) => (
      <li class:list={['step-item', index === items.length - 1 && 'last-step']}>
        <div class="step-number">
          <span>{index + 1}</span>
        </div>
        
        <div class="step-content">
          <p class="step-label">{item.label}</p>
          
          {item.details && (
            <p class="step-details">{item.details}</p>
          )}
        </div>
      </li>
    ))}
  </ol>
</div>

<style>
  .steps-container {
    font-family: 'Figtree', system-ui, -apple-system, sans-serif;
  }

  .steps-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .step-item {
    display: flex;
    gap: 1rem;
    position: relative;
  }

  /* Connecting line */
  .step-item:not(.last-step)::before {
    content: '';
    position: absolute;
    left: 15px;
    top: 40px;
    width: 2px;
    bottom: 0;
    background-color: #a3a3a3;
  }

  .step-number {
    flex-shrink: 0;
    width: 32px;
    height: 32px;
    border-radius: 50%;
    background: #5A8669;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.875rem;
    font-weight: 600;
    position: relative;
    z-index: 1;
  }

  .step-content {
    flex: 1;
    min-width: 0;
    padding-bottom: 1.5rem;
  }

  .last-step .step-content {
    padding-bottom: 0;
  }

  .step-label {
    font-size: 1rem;
    font-weight: 600;
    color: #403422;
    line-height: 1.5;
    margin: 0 0 0.5rem 0;
    padding-top: 0.25rem;
  }

  .step-details {
    font-size: 0.9375rem;
    color: #525252;
    line-height: 1.6;
    margin: 0;
  }
</style>
