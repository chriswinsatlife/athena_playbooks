---
/**
 * CallToAction - End-of-playbook CTA section
 *
 * Simple, elegant CTA with headline, description, and button
 */

export interface Props {
  headline?: string;
  description?: string;
  primary_cta?: {
    text: string;
    url: string;
  };
  secondary_cta?: {
    text: string;
    url: string;
  };
}

const {
  headline = 'Ready to implement this playbook?',
  description = 'Schedule a call to discuss how Athena can help you build and maintain this system.',
  primary_cta = { text: 'Get Started', url: 'https://www.athena.com/' },
  secondary_cta,
} = Astro.props;
---

<section class="cta-section">
  <div class="cta-content">
    <h2 class="cta-headline">{headline}</h2>
    <p class="cta-description">{description}</p>
    <div class="cta-buttons">
      <a href={primary_cta.url} class="cta-primary" target="_blank" rel="noopener noreferrer">
        {primary_cta.text}
        <svg width="16" height="16" viewBox="0 0 16 16" fill="none" aria-hidden="true">
          <path d="M3 8h10M9 4l4 4-4 4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </a>
      {secondary_cta && (
        <a href={secondary_cta.url} class="cta-secondary" target="_blank" rel="noopener noreferrer">
          {secondary_cta.text}
        </a>
      )}
    </div>
  </div>
</section>

<style>
  .cta-section {
    margin-top: 3rem;
    padding: 2.5rem;
    background: linear-gradient(135deg, #f8f7f4 0%, #f0efe9 100%);
    border-radius: 1rem;
    border: 1px solid #e5e5e5;
  }

  .cta-content {
    text-align: center;
    max-width: 480px;
    margin: 0 auto;
  }

  .cta-headline {
    font-family: 'Playfair Display', Georgia, serif;
    font-size: 1.75rem;
    font-weight: 400;
    color: #403422;
    margin: 0 0 0.75rem 0;
    line-height: 1.3;
  }

  .cta-description {
    font-family: 'Figtree', system-ui, sans-serif;
    font-size: 1rem;
    color: #525252;
    line-height: 1.6;
    margin: 0 0 1.5rem 0;
  }

  .cta-buttons {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.75rem;
  }

  .cta-primary {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-family: 'Figtree', system-ui, sans-serif;
    font-size: 0.9375rem;
    font-weight: 600;
    color: #fff;
    background: #5A8669;
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
    text-decoration: none;
    transition: background 0.2s ease;
  }

  .cta-primary:hover {
    background: #4a7359;
  }

  .cta-secondary {
    display: inline-flex;
    align-items: center;
    font-family: 'Figtree', system-ui, sans-serif;
    font-size: 0.9375rem;
    font-weight: 600;
    color: #403422;
    background: #fff;
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
    border: 1px solid #d0cfc9;
    text-decoration: none;
    transition: border-color 0.2s ease;
  }

  .cta-secondary:hover {
    border-color: #5A8669;
    color: #5A8669;
  }

  @media (max-width: 480px) {
    .cta-section {
      padding: 2rem 1.5rem;
    }

    .cta-headline {
      font-size: 1.5rem;
    }

    .cta-buttons {
      flex-direction: column;
    }

    .cta-primary,
    .cta-secondary {
      width: 100%;
      justify-content: center;
    }
  }
</style>
