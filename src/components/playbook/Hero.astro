---
/**
 * Hero - Clean, minimal playbook hero section
 *
 * Simple vertical stack: headline, subheadline, description, stats row, tags
 */

export interface HeroStat {
  value: string;
  label: string;
}

export interface HeroImage {
  src: string;
  alt: string;
  caption?: string;
}

export interface Props {
  headline: string;
  subheadline: string;
  value_prop: string;
  stats?: HeroStat[];
  optimized_for?: string[];
  image?: HeroImage;
}

const { headline, subheadline, value_prop, stats, optimized_for } = Astro.props;
---

<section class="hero">
  <div class="hero-inner">
    <h1 class="headline">{headline}</h1>
    <p class="subheadline">{subheadline}</p>
    <p class="description">{value_prop}</p>

    {stats && stats.length > 0 && (
      <div class="stats-row">
        {stats.map((stat, i) => (
          <div class="stat">
            <span class="stat-value">{stat.value}</span>
            <span class="stat-label">{stat.label}</span>
          </div>
        ))}
      </div>
    )}

    {optimized_for && optimized_for.length > 0 && (
      <div class="tags">
        {optimized_for.map((tag) => (
          <span class="tag">{tag}</span>
        ))}
      </div>
    )}
  </div>
</section>

<style>
  .hero {
    background: #f8f8f6;
    border-radius: 1rem;
    margin-bottom: 2.5rem;
  }

  .hero-inner {
    padding: 3rem 2.5rem;
    max-width: 720px;
  }

  .headline {
    font-family: 'Playfair Display', Georgia, serif;
    font-size: 2.5rem;
    font-weight: 400;
    line-height: 1.2;
    color: #1a1a1a;
    margin: 0 0 0.75rem 0;
    letter-spacing: -0.01em;
  }

  .subheadline {
    font-family: 'Figtree', system-ui, sans-serif;
    font-size: 1.25rem;
    font-weight: 500;
    color: #5A8669;
    line-height: 1.4;
    margin: 0 0 1.25rem 0;
  }

  .description {
    font-family: 'Figtree', system-ui, sans-serif;
    font-size: 1.0625rem;
    line-height: 1.7;
    color: #4a4a4a;
    margin: 0 0 2rem 0;
  }

  .stats-row {
    display: flex;
    gap: 2.5rem;
    padding: 1.5rem 0;
    border-top: 1px solid #e0e0dc;
    border-bottom: 1px solid #e0e0dc;
    margin-bottom: 1.5rem;
  }

  .stat {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .stat-value {
    font-family: 'Playfair Display', Georgia, serif;
    font-size: 1.75rem;
    font-weight: 500;
    color: #1a1a1a;
    line-height: 1;
  }

  .stat-label {
    font-family: 'Figtree', system-ui, sans-serif;
    font-size: 0.8125rem;
    font-weight: 500;
    color: #666;
    text-transform: uppercase;
    letter-spacing: 0.04em;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    display: inline-block;
    padding: 0.375rem 0.875rem;
    background: #5A8669;
    color: #fff;
    border-radius: 9999px;
    font-family: 'Figtree', system-ui, sans-serif;
    font-size: 0.8125rem;
    font-weight: 500;
  }

  @media (max-width: 640px) {
    .hero-inner {
      padding: 2rem 1.5rem;
    }

    .headline {
      font-size: 1.875rem;
    }

    .subheadline {
      font-size: 1.125rem;
    }

    .description {
      font-size: 1rem;
    }

    .stats-row {
      gap: 1.5rem;
      flex-wrap: wrap;
    }

    .stat-value {
      font-size: 1.5rem;
    }
  }
</style>
