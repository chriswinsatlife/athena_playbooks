---
/**
 * Hero - Playbook hero section with title, subtitle, stats, and optimized_for tags
 *
 * Usage:
 *   <Hero
 *     headline="Never Miss a Birthday Again"
 *     subheadline="Automate thoughtful gift-giving with your EA"
 *     value_prop="Elite delegators strengthen relationships..."
 *     stats={[{ value: "30s", label: "Average time" }]}
 *     optimized_for={["time-savings", "automation"]}
 *     image={{ src: "/images/hero.png", alt: "Gift automation" }}
 *   />
 */

export interface HeroStat {
  value: string;
  label: string;
}

export interface HeroImage {
  src: string;
  alt: string;
  caption?: string;
}

export interface Props {
  headline: string;
  subheadline: string;
  value_prop: string;
  stats?: HeroStat[];
  optimized_for?: string[];
  image?: HeroImage;
}

const { headline, subheadline, value_prop, stats, optimized_for, image } = Astro.props;

// Format tag for display (convert slug to readable)
function formatTag(tag: string): string {
  return tag.replace(/-/g, ' ').replace(/\b\w/g, (c) => c.toUpperCase());
}
---

<section class="playbook-hero">
  {image && (
    <div class="hero-image-container">
      <img src={image.src} alt={image.alt} class="hero-image" />
      {image.caption && <p class="hero-image-caption">{image.caption}</p>}
    </div>
  )}

  <div class="hero-content">
    <h1 class="hero-headline">{headline}</h1>
    <p class="hero-subheadline">{subheadline}</p>
    <p class="hero-value-prop">{value_prop}</p>

    {stats && stats.length > 0 && (
      <div class="hero-stats">
        {stats.map((stat) => (
          <div class="hero-stat">
            <span class="stat-value">{stat.value}</span>
            <span class="stat-label">{stat.label}</span>
          </div>
        ))}
      </div>
    )}

    {optimized_for && optimized_for.length > 0 && (
      <div class="hero-tags">
        {optimized_for.map((tag) => (
          <span class="hero-tag">{formatTag(tag)}</span>
        ))}
      </div>
    )}
  </div>
</section>

<style>
  .playbook-hero {
    --hero-bg: #E6E7DD;
    --hero-fg: #403422;
    --hero-sage: #5A8669;
    --hero-muted: #464644;
    --hero-border: #99b2a2;

    background: var(--hero-bg);
    padding: 3rem 2rem;
    border-radius: 1rem;
    margin-bottom: 2rem;
  }

  .hero-image-container {
    margin-bottom: 2rem;
    border-radius: 0.75rem;
    overflow: hidden;
  }

  .hero-image {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
    max-height: 400px;
  }

  .hero-image-caption {
    font-size: 0.875rem;
    color: var(--hero-muted);
    text-align: center;
    margin-top: 0.5rem;
    font-style: italic;
  }

  .hero-content {
    max-width: 800px;
  }

  .hero-headline {
    font-family: 'Playfair Display', Georgia, serif;
    font-size: 3rem;
    font-weight: 400;
    line-height: 1.15;
    color: var(--hero-fg);
    margin: 0 0 0.75rem 0;
  }

  .hero-subheadline {
    font-family: 'Figtree', system-ui, sans-serif;
    font-size: 1.375rem;
    font-weight: 400;
    color: var(--hero-sage);
    margin: 0 0 1rem 0;
  }

  .hero-value-prop {
    font-family: 'Figtree', system-ui, sans-serif;
    font-size: 1.125rem;
    line-height: 1.6;
    color: var(--hero-muted);
    margin: 0 0 1.5rem 0;
  }

  .hero-stats {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
    margin-bottom: 1.5rem;
    padding: 1.25rem 0;
    border-top: 1px solid var(--hero-border);
    border-bottom: 1px solid var(--hero-border);
  }

  .hero-stat {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .stat-value {
    font-family: 'Playfair Display', Georgia, serif;
    font-size: 2rem;
    font-weight: 500;
    color: var(--hero-fg);
  }

  .stat-label {
    font-family: 'Figtree', system-ui, sans-serif;
    font-size: 0.875rem;
    color: var(--hero-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .hero-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .hero-tag {
    display: inline-block;
    padding: 0.375rem 0.75rem;
    background: rgba(90, 134, 105, 0.15);
    color: var(--hero-sage);
    border-radius: 9999px;
    font-family: 'Figtree', system-ui, sans-serif;
    font-size: 0.8125rem;
    font-weight: 500;
  }

  @media (max-width: 768px) {
    .playbook-hero {
      padding: 2rem 1.25rem;
    }

    .hero-headline {
      font-size: 2rem;
    }

    .hero-subheadline {
      font-size: 1.125rem;
    }

    .hero-value-prop {
      font-size: 1rem;
    }

    .hero-stats {
      gap: 1rem;
    }

    .stat-value {
      font-size: 1.5rem;
    }
  }
</style>
