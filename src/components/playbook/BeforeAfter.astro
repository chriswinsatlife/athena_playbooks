---
/**
 * BeforeAfter - Before/After comparison section
 *
 * Shows pain points vs benefits in a side-by-side or stacked layout.
 * Optionally renders embedded comparison components.
 *
 * Usage:
 *   <BeforeAfter
 *     before={{ title: "Without This Playbook", pain_points: ["10+ hours", "Panic buying"] }}
 *     after={{ title: "With This Playbook", benefits: ["30 seconds", "Automated"] }}
 *   />
 *
 *   With embeds:
 *   <BeforeAfter
 *     before={{ title: "Before", pain_points: [] }}
 *     after={{ title: "After", benefits: [] }}
 *     before_embed={{ type: "calendar", ... }}
 *     after_embed={{ type: "calendar", ... }}
 *   />
 */

export interface BeforeState {
  title: string;
  pain_points: string[];
}

export interface AfterState {
  title: string;
  benefits: string[];
}

export interface Props {
  before: BeforeState;
  after: AfterState;
  title?: string;
  description?: string;
  before_embed?: unknown;
  after_embed?: unknown;
  layout?: 'side-by-side' | 'stacked';
}

const {
  before,
  after,
  title = 'The Transformation',
  description,
  before_embed,
  after_embed,
  layout = 'side-by-side',
} = Astro.props;

const hasEmbeds = before_embed || after_embed;
---

<section class="before-after-section">
  <div class="before-after-header">
    <h2 class="before-after-title">{title}</h2>
    {description && <p class="before-after-description">{description}</p>}
  </div>

  <div class:list={['before-after-grid', `layout-${layout}`]}>
    <div class="comparison-panel panel-before">
      <div class="panel-header">
        <span class="panel-icon" aria-hidden="true">
          <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
            <circle cx="10" cy="10" r="8" stroke="currentColor" stroke-width="1.5" />
            <path d="M7 10h6" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" />
          </svg>
        </span>
        <h3 class="panel-title">{before.title}</h3>
      </div>

      {before.pain_points.length > 0 && (
        <ul class="panel-list">
          {before.pain_points.map((point) => (
            <li class="panel-item item-pain">
              <span class="item-icon">\u2717</span>
              <span class="item-text">{point}</span>
            </li>
          ))}
        </ul>
      )}

      {before_embed && (
        <div class="panel-embed">
          <slot name="before-embed" />
        </div>
      )}
    </div>

    <div class="comparison-divider">
      <div class="divider-line"></div>
      <span class="divider-arrow" aria-hidden="true">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
          <path
            d="M5 12h14M13 6l6 6-6 6"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          />
        </svg>
      </span>
      <div class="divider-line"></div>
    </div>

    <div class="comparison-panel panel-after">
      <div class="panel-header">
        <span class="panel-icon" aria-hidden="true">
          <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
            <circle cx="10" cy="10" r="8" stroke="currentColor" stroke-width="1.5" />
            <path
              d="M7 10l2 2 4-4"
              stroke="currentColor"
              stroke-width="1.5"
              stroke-linecap="round"
              stroke-linejoin="round"
            />
          </svg>
        </span>
        <h3 class="panel-title">{after.title}</h3>
      </div>

      {after.benefits.length > 0 && (
        <ul class="panel-list">
          {after.benefits.map((benefit) => (
            <li class="panel-item item-benefit">
              <span class="item-icon">\u2713</span>
              <span class="item-text">{benefit}</span>
            </li>
          ))}
        </ul>
      )}

      {after_embed && (
        <div class="panel-embed">
          <slot name="after-embed" />
        </div>
      )}
    </div>
  </div>
</section>

<style>
  .before-after-section {
    --ba-fg: #403422;
    --ba-muted: #666;
    --ba-sage: #5A8669;
    --ba-red: #c53030;
    --ba-red-light: #fff5f5;
    --ba-green: #2f855a;
    --ba-green-light: #f0fff4;
    --ba-border: #e5e5e5;

    margin-bottom: 2.5rem;
  }

  .before-after-header {
    margin-bottom: 1.5rem;
  }

  .before-after-title {
    font-family: 'Playfair Display', Georgia, serif;
    font-size: 1.75rem;
    font-weight: 400;
    color: var(--ba-fg);
    margin: 0;
  }

  .before-after-description {
    font-family: 'Figtree', system-ui, sans-serif;
    font-size: 1rem;
    color: var(--ba-muted);
    margin: 0.5rem 0 0 0;
    line-height: 1.5;
  }

  .before-after-grid {
    display: grid;
    gap: 1.5rem;
  }

  .before-after-grid.layout-side-by-side {
    grid-template-columns: 1fr auto 1fr;
    align-items: start;
  }

  .before-after-grid.layout-stacked {
    grid-template-columns: 1fr;
  }

  .comparison-panel {
    background: #fff;
    border: 1px solid var(--ba-border);
    border-radius: 0.75rem;
    padding: 1.5rem;
  }

  .panel-before {
    border-top: 3px solid var(--ba-red);
  }

  .panel-after {
    border-top: 3px solid var(--ba-green);
  }

  .panel-header {
    display: flex;
    align-items: center;
    gap: 0.625rem;
    margin-bottom: 1rem;
  }

  .panel-icon {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .panel-before .panel-icon {
    color: var(--ba-red);
  }

  .panel-after .panel-icon {
    color: var(--ba-green);
  }

  .panel-title {
    font-family: 'Figtree', system-ui, sans-serif;
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--ba-fg);
    margin: 0;
  }

  .panel-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .panel-item {
    display: flex;
    align-items: flex-start;
    gap: 0.625rem;
    padding: 0.625rem 0.75rem;
    border-radius: 0.5rem;
  }

  .item-pain {
    background: var(--ba-red-light);
  }

  .item-benefit {
    background: var(--ba-green-light);
  }

  .item-icon {
    flex-shrink: 0;
    font-size: 0.875rem;
    font-weight: 600;
    line-height: 1.4;
  }

  .item-pain .item-icon {
    color: var(--ba-red);
  }

  .item-benefit .item-icon {
    color: var(--ba-green);
  }

  .item-text {
    font-family: 'Figtree', system-ui, sans-serif;
    font-size: 0.9375rem;
    color: var(--ba-fg);
    line-height: 1.4;
  }

  .panel-embed {
    margin-top: 1.25rem;
    padding-top: 1.25rem;
    border-top: 1px solid var(--ba-border);
  }

  .comparison-divider {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 1rem 0;
  }

  .before-after-grid.layout-side-by-side .comparison-divider {
    padding: 0 0.5rem;
  }

  .before-after-grid.layout-stacked .comparison-divider {
    flex-direction: row;
    padding: 0.5rem 0;
  }

  .before-after-grid.layout-stacked .comparison-divider svg {
    transform: rotate(90deg);
  }

  .divider-line {
    flex: 1;
    width: 1px;
    background: var(--ba-border);
  }

  .before-after-grid.layout-stacked .divider-line {
    height: 1px;
    width: auto;
  }

  .divider-arrow {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    background: var(--ba-sage);
    color: #fff;
    border-radius: 50%;
    flex-shrink: 0;
  }

  @media (max-width: 768px) {
    .before-after-grid.layout-side-by-side {
      grid-template-columns: 1fr;
    }

    .before-after-grid.layout-side-by-side .comparison-divider {
      flex-direction: row;
      padding: 0.5rem 0;
    }

    .before-after-grid.layout-side-by-side .comparison-divider svg {
      transform: rotate(90deg);
    }

    .before-after-grid.layout-side-by-side .divider-line {
      height: 1px;
      width: auto;
    }

    .comparison-panel {
      padding: 1.25rem;
    }
  }
</style>
