---
/**
 * ToolsGrid - Display tools used in a playbook
 *
 * Clean card grid with proper icons
 */

export interface PlaybookTool {
  name: string;
  slug?: string;
  category: string;
  required?: boolean;
  logo?: string;
  url?: string;
  affiliate_url?: string;
  description?: string;
  alternatives?: string[];
}

export interface Props {
  playbook_tools: PlaybookTool[];
  title?: string;
}

const { playbook_tools, title = 'Tools' } = Astro.props;

function getToolLink(tool: PlaybookTool): string | undefined {
  return tool.affiliate_url || tool.url;
}
---

<section class="tools-section">
  <h2 class="tools-title">{title}</h2>

  <div class="tools-grid">
    {playbook_tools.map((tool) => {
      const link = getToolLink(tool);

      return (
        <div class="tool-card">
          <div class="tool-header">
            <div class="tool-icon">
              {tool.logo ? (
                <img src={tool.logo} alt="" class="tool-logo" />
              ) : (
                <svg width="20" height="20" viewBox="0 0 20 20" fill="none" aria-hidden="true">
                  <rect x="2" y="2" width="16" height="16" rx="3" stroke="currentColor" stroke-width="1.5"/>
                  <path d="M6 10h8M10 6v8" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
                </svg>
              )}
            </div>
            <div class="tool-info">
              <h3 class="tool-name">
                {link ? (
                  <a href={link} target="_blank" rel="noopener noreferrer">
                    {tool.name}
                    <svg class="link-arrow" width="14" height="14" viewBox="0 0 14 14" fill="none" aria-hidden="true">
                      <path d="M4 10l6-6M5 4h5v5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                  </a>
                ) : (
                  tool.name
                )}
              </h3>
              <span class="tool-category">{tool.category}</span>
            </div>
            <span class:list={['tool-badge', tool.required ? 'required' : 'optional']}>
              {tool.required ? 'Required' : 'Optional'}
            </span>
          </div>

          {tool.description && <p class="tool-description">{tool.description}</p>}

          {tool.alternatives && tool.alternatives.length > 0 && (
            <p class="tool-alternatives">
              <span class="alt-label">Alternatives:</span> {tool.alternatives.join(', ')}
            </p>
          )}
        </div>
      );
    })}
  </div>
</section>

<style>
  .tools-section {
    margin-bottom: 2.5rem;
  }

  .tools-title {
    font-family: 'Playfair Display', Georgia, serif;
    font-size: 1.5rem;
    font-weight: 400;
    color: #403422;
    margin: 0 0 1.25rem 0;
  }

  .tools-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1rem;
  }

  .tool-card {
    background: #fff;
    border: 1px solid #e5e5e5;
    border-radius: 0.75rem;
    padding: 1.25rem;
  }

  .tool-header {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
  }

  .tool-icon {
    flex-shrink: 0;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #f5f5f5;
    border-radius: 0.5rem;
    color: #5A8669;
  }

  .tool-logo {
    width: 24px;
    height: 24px;
    object-fit: contain;
  }

  .tool-info {
    flex: 1;
    min-width: 0;
  }

  .tool-name {
    font-family: 'Figtree', system-ui, sans-serif;
    font-size: 1rem;
    font-weight: 600;
    color: #1a1a1a;
    margin: 0;
    line-height: 1.3;
  }

  .tool-name a {
    color: inherit;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
  }

  .tool-name a:hover {
    color: #5A8669;
  }

  .link-arrow {
    opacity: 0.5;
  }

  .tool-category {
    font-family: 'Figtree', system-ui, sans-serif;
    font-size: 0.8125rem;
    color: #666;
  }

  .tool-badge {
    flex-shrink: 0;
    font-family: 'Figtree', system-ui, sans-serif;
    font-size: 0.6875rem;
    font-weight: 600;
    padding: 0.25rem 0.625rem;
    border-radius: 9999px;
    text-transform: uppercase;
    letter-spacing: 0.02em;
  }

  .tool-badge.required {
    background: #5A8669;
    color: #fff;
  }

  .tool-badge.optional {
    background: #f0f0f0;
    color: #666;
  }

  .tool-description {
    font-family: 'Figtree', system-ui, sans-serif;
    font-size: 0.9375rem;
    color: #525252;
    line-height: 1.5;
    margin: 0.75rem 0 0 0;
  }

  .tool-alternatives {
    font-family: 'Figtree', system-ui, sans-serif;
    font-size: 0.8125rem;
    color: #666;
    margin: 0.75rem 0 0 0;
    padding-top: 0.75rem;
    border-top: 1px solid #f0f0f0;
  }

  .alt-label {
    font-weight: 500;
    color: #1a1a1a;
  }

  @media (max-width: 600px) {
    .tools-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
