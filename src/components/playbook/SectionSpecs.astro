---
/**
 * SectionSpecs - Renders specs format content
 * 
 * Displays items as key-value pairs in a grid/table layout
 */

export interface SpecItem {
  label: string;
  value: string;
}

export interface Props {
  items: SpecItem[];
}

const { items } = Astro.props;
---

<div class="specs-container">
  <dl class="specs-grid">
    {items.map((item, index) => (
      <Fragment>
        <dt class:list={[
          'specs-label',
          index === 0 && 'first-item'
        ]}>
          {item.label}
        </dt>
        <dd class:list={[
          'specs-value',
          index === 0 && 'first-item',
          index === items.length - 1 && 'last-item'
        ]}>
          {item.value}
        </dd>
      </Fragment>
    ))}
  </dl>
</div>

<style>
  .specs-container {
    font-family: 'Figtree', system-ui, -apple-system, sans-serif;
  }

  .specs-grid {
    display: grid;
    grid-template-columns: minmax(140px, 30%) 1fr;
    gap: 0;
  }

  .specs-label {
    font-size: 0.9375rem;
    font-weight: 600;
    color: #403422;
    padding: 1rem 1rem 1rem 0;
    border-top: 1px solid #e5e5e5;
  }

  .specs-label.first-item {
    border-top: none;
  }

  .specs-value {
    font-size: 0.9375rem;
    color: #525252;
    line-height: 1.5;
    padding: 1rem 0;
    border-top: 1px solid #e5e5e5;
  }

  .specs-value.first-item {
    border-top: none;
  }

  @media (max-width: 639px) {
    .specs-grid {
      grid-template-columns: 1fr;
    }

    .specs-label {
      padding: 1rem 0 0.25rem 0;
      border-top: 1px solid #e5e5e5;
    }

    .specs-label.first-item {
      padding-top: 0;
      border-top: none;
    }

    .specs-value {
      padding: 0 0 1rem 0;
      border-top: none;
      border-bottom: 1px solid #e5e5e5;
    }

    .specs-value.last-item {
      border-bottom: none;
      padding-bottom: 0;
    }
  }
</style>
