---
import Base from '../../layouts/Base.astro'

// ALL 20 Element Components - Static Imports
import AnnouncementBadge from '../../../components/elements/announcement-badge.astro'
import Button from '../../../components/elements/button.astro'
import ButtonLink from '../../../components/elements/button-link.astro'
import Container from '../../../components/elements/container.astro'
import EmailSignupForm from '../../../components/elements/email-signup-form.astro'
import Eyebrow from '../../../components/elements/eyebrow.astro'
import Heading from '../../../components/elements/heading.astro'
import InstallCommand from '../../../components/elements/install-command.astro'
import Link from '../../../components/elements/link.astro'
import LogoGrid from '../../../components/elements/logo-grid.astro'
import Main from '../../../components/elements/main.astro'
import PlainButton from '../../../components/elements/plain-button.astro'
import PlainButtonLink from '../../../components/elements/plain-button-link.astro'
import Screenshot from '../../../components/elements/screenshot.astro'
import Section from '../../../components/elements/section.astro'
import SoftButton from '../../../components/elements/soft-button.astro'
import SoftButtonLink from '../../../components/elements/soft-button-link.astro'
import Subheading from '../../../components/elements/subheading.astro'
import Text from '../../../components/elements/text.astro'
import Wallpaper from '../../../components/elements/wallpaper.astro'
---

<Base title="Showcase - All 20 Elements">
  <div class="min-h-screen bg-mist-100 dark:bg-mist-950">
    <!-- Header -->
    <header class="border-b border-mist-200 dark:border-mist-800 bg-white dark:bg-mist-900">
      <div class="max-w-7xl mx-auto px-6 py-8">
        <nav class="mb-4">
          <a href="/showcase/" class="text-sm text-mist-600 dark:text-mist-400 hover:text-athena-primary dark:hover:text-white transition-colors">
            ← Back to Showcase
          </a>
        </nav>
        <h1 class="font-display text-4xl text-athena-primary dark:text-white tracking-tight">
          Element Components
        </h1>
        <p class="mt-2 text-mist-600 dark:text-mist-400 font-sans">
          All 20 element components from the design system
        </p>
      </div>
    </header>

    <!-- Main Content -->
    <main class="max-w-7xl mx-auto px-6 py-12">
      <div class="grid gap-8">
        
        <!-- 1. AnnouncementBadge -->
        <div class="rounded-xl bg-white dark:bg-mist-900 border border-mist-200 dark:border-mist-800 overflow-hidden">
          <div class="px-6 py-4 border-b border-mist-200 dark:border-mist-800 bg-mist-50 dark:bg-mist-800/50">
            <h2 class="text-sm font-medium text-mist-600 dark:text-mist-400">1. AnnouncementBadge</h2>
          </div>
          <div class="p-6">
            <AnnouncementBadge text="New feature available!" href="#" cta="Learn more" />
          </div>
        </div>

        <!-- 2. Button -->
        <div class="rounded-xl bg-white dark:bg-mist-900 border border-mist-200 dark:border-mist-800 overflow-hidden">
          <div class="px-6 py-4 border-b border-mist-200 dark:border-mist-800 bg-mist-50 dark:bg-mist-800/50">
            <h2 class="text-sm font-medium text-mist-600 dark:text-mist-400">2. Button</h2>
          </div>
          <div class="p-6 flex flex-wrap gap-4">
            <Button>Default Button</Button>
            <Button size="lg">Large Button</Button>
            <Button color="light">Light Button</Button>
          </div>
        </div>

        <!-- 3. ButtonLink -->
        <div class="rounded-xl bg-white dark:bg-mist-900 border border-mist-200 dark:border-mist-800 overflow-hidden">
          <div class="px-6 py-4 border-b border-mist-200 dark:border-mist-800 bg-mist-50 dark:bg-mist-800/50">
            <h2 class="text-sm font-medium text-mist-600 dark:text-mist-400">3. ButtonLink</h2>
          </div>
          <div class="p-6 flex flex-wrap gap-4">
            <ButtonLink href="#">Button Link</ButtonLink>
            <ButtonLink href="#" size="lg">Large Link</ButtonLink>
          </div>
        </div>

        <!-- 4. PlainButton -->
        <div class="rounded-xl bg-white dark:bg-mist-900 border border-mist-200 dark:border-mist-800 overflow-hidden">
          <div class="px-6 py-4 border-b border-mist-200 dark:border-mist-800 bg-mist-50 dark:bg-mist-800/50">
            <h2 class="text-sm font-medium text-mist-600 dark:text-mist-400">4. PlainButton</h2>
          </div>
          <div class="p-6">
            <PlainButton>Plain Button</PlainButton>
          </div>
        </div>

        <!-- 5. PlainButtonLink -->
        <div class="rounded-xl bg-white dark:bg-mist-900 border border-mist-200 dark:border-mist-800 overflow-hidden">
          <div class="px-6 py-4 border-b border-mist-200 dark:border-mist-800 bg-mist-50 dark:bg-mist-800/50">
            <h2 class="text-sm font-medium text-mist-600 dark:text-mist-400">5. PlainButtonLink</h2>
          </div>
          <div class="p-6">
            <PlainButtonLink href="#">Plain Button Link</PlainButtonLink>
          </div>
        </div>

        <!-- 6. SoftButton -->
        <div class="rounded-xl bg-white dark:bg-mist-900 border border-mist-200 dark:border-mist-800 overflow-hidden">
          <div class="px-6 py-4 border-b border-mist-200 dark:border-mist-800 bg-mist-50 dark:bg-mist-800/50">
            <h2 class="text-sm font-medium text-mist-600 dark:text-mist-400">6. SoftButton</h2>
          </div>
          <div class="p-6">
            <SoftButton>Soft Button</SoftButton>
          </div>
        </div>

        <!-- 7. SoftButtonLink -->
        <div class="rounded-xl bg-white dark:bg-mist-900 border border-mist-200 dark:border-mist-800 overflow-hidden">
          <div class="px-6 py-4 border-b border-mist-200 dark:border-mist-800 bg-mist-50 dark:bg-mist-800/50">
            <h2 class="text-sm font-medium text-mist-600 dark:text-mist-400">7. SoftButtonLink</h2>
          </div>
          <div class="p-6">
            <SoftButtonLink href="#">Soft Button Link</SoftButtonLink>
          </div>
        </div>

        <!-- 8. Heading -->
        <div class="rounded-xl bg-white dark:bg-mist-900 border border-mist-200 dark:border-mist-800 overflow-hidden">
          <div class="px-6 py-4 border-b border-mist-200 dark:border-mist-800 bg-mist-50 dark:bg-mist-800/50">
            <h2 class="text-sm font-medium text-mist-600 dark:text-mist-400">8. Heading</h2>
          </div>
          <div class="p-6">
            <Heading>Main Page Heading</Heading>
          </div>
        </div>

        <!-- 9. Subheading -->
        <div class="rounded-xl bg-white dark:bg-mist-900 border border-mist-200 dark:border-mist-800 overflow-hidden">
          <div class="px-6 py-4 border-b border-mist-200 dark:border-mist-800 bg-mist-50 dark:bg-mist-800/50">
            <h2 class="text-sm font-medium text-mist-600 dark:text-mist-400">9. Subheading</h2>
          </div>
          <div class="p-6">
            <Subheading>Section Subheading</Subheading>
          </div>
        </div>

        <!-- 10. Eyebrow -->
        <div class="rounded-xl bg-white dark:bg-mist-900 border border-mist-200 dark:border-mist-800 overflow-hidden">
          <div class="px-6 py-4 border-b border-mist-200 dark:border-mist-800 bg-mist-50 dark:bg-mist-800/50">
            <h2 class="text-sm font-medium text-mist-600 dark:text-mist-400">10. Eyebrow</h2>
          </div>
          <div class="p-6">
            <Eyebrow>CATEGORY LABEL</Eyebrow>
          </div>
        </div>

        <!-- 11. Text -->
        <div class="rounded-xl bg-white dark:bg-mist-900 border border-mist-200 dark:border-mist-800 overflow-hidden">
          <div class="px-6 py-4 border-b border-mist-200 dark:border-mist-800 bg-mist-50 dark:bg-mist-800/50">
            <h2 class="text-sm font-medium text-mist-600 dark:text-mist-400">11. Text</h2>
          </div>
          <div class="p-6">
            <Text>This is body text content that demonstrates the Text component styling.</Text>
          </div>
        </div>

        <!-- 12. Link -->
        <div class="rounded-xl bg-white dark:bg-mist-900 border border-mist-200 dark:border-mist-800 overflow-hidden">
          <div class="px-6 py-4 border-b border-mist-200 dark:border-mist-800 bg-mist-50 dark:bg-mist-800/50">
            <h2 class="text-sm font-medium text-mist-600 dark:text-mist-400">12. Link</h2>
          </div>
          <div class="p-6">
            <Link href="#">Regular Link Component</Link>
          </div>
        </div>

        <!-- 13. Container -->
        <div class="rounded-xl bg-white dark:bg-mist-900 border border-mist-200 dark:border-mist-800 overflow-hidden">
          <div class="px-6 py-4 border-b border-mist-200 dark:border-mist-800 bg-mist-50 dark:bg-mist-800/50">
            <h2 class="text-sm font-medium text-mist-600 dark:text-mist-400">13. Container</h2>
          </div>
          <div class="p-6">
            <div class="bg-mist-100 dark:bg-mist-800 rounded-lg p-4">
              <Container>
                <Text>Content inside a Container component</Text>
              </Container>
            </div>
          </div>
        </div>

        <!-- 14. Main -->
        <div class="rounded-xl bg-white dark:bg-mist-900 border border-mist-200 dark:border-mist-800 overflow-hidden">
          <div class="px-6 py-4 border-b border-mist-200 dark:border-mist-800 bg-mist-50 dark:bg-mist-800/50">
            <h2 class="text-sm font-medium text-mist-600 dark:text-mist-400">14. Main</h2>
          </div>
          <div class="p-6">
            <div class="bg-mist-100 dark:bg-mist-800 rounded-lg p-4">
              <Main>
                <Text>Content inside a Main component wrapper</Text>
              </Main>
            </div>
          </div>
        </div>

        <!-- 15. Section -->
        <div class="rounded-xl bg-white dark:bg-mist-900 border border-mist-200 dark:border-mist-800 overflow-hidden">
          <div class="px-6 py-4 border-b border-mist-200 dark:border-mist-800 bg-mist-50 dark:bg-mist-800/50">
            <h2 class="text-sm font-medium text-mist-600 dark:text-mist-400">15. Section</h2>
          </div>
          <div class="p-6">
            <div class="bg-mist-100 dark:bg-mist-800 rounded-lg p-4">
              <Section>
                <Text>Content inside a Section component</Text>
              </Section>
            </div>
          </div>
        </div>

        <!-- 16. EmailSignupForm -->
        <div class="rounded-xl bg-white dark:bg-mist-900 border border-mist-200 dark:border-mist-800 overflow-hidden">
          <div class="px-6 py-4 border-b border-mist-200 dark:border-mist-800 bg-mist-50 dark:bg-mist-800/50">
            <h2 class="text-sm font-medium text-mist-600 dark:text-mist-400">16. EmailSignupForm</h2>
          </div>
          <div class="p-6">
            <EmailSignupForm cta="Subscribe" placeholder="Enter your email" />
          </div>
        </div>

        <!-- 17. InstallCommand -->
        <div class="rounded-xl bg-white dark:bg-mist-900 border border-mist-200 dark:border-mist-800 overflow-hidden">
          <div class="px-6 py-4 border-b border-mist-200 dark:border-mist-800 bg-mist-50 dark:bg-mist-800/50">
            <h2 class="text-sm font-medium text-mist-600 dark:text-mist-400">17. InstallCommand</h2>
          </div>
          <div class="p-6">
            <InstallCommand command="npm install @example/package" />
          </div>
        </div>

        <!-- 18. LogoGrid -->
        <div class="rounded-xl bg-white dark:bg-mist-900 border border-mist-200 dark:border-mist-800 overflow-hidden">
          <div class="px-6 py-4 border-b border-mist-200 dark:border-mist-800 bg-mist-50 dark:bg-mist-800/50">
            <h2 class="text-sm font-medium text-mist-600 dark:text-mist-400">18. LogoGrid</h2>
          </div>
          <div class="p-6">
            <LogoGrid>
              <div class="bg-mist-200 dark:bg-mist-700 rounded-lg p-4 text-center text-mist-700 dark:text-mist-300">Logo 1</div>
              <div class="bg-mist-200 dark:bg-mist-700 rounded-lg p-4 text-center text-mist-700 dark:text-mist-300">Logo 2</div>
              <div class="bg-mist-200 dark:bg-mist-700 rounded-lg p-4 text-center text-mist-700 dark:text-mist-300">Logo 3</div>
            </LogoGrid>
          </div>
        </div>

        <!-- 19. Screenshot -->
        <div class="rounded-xl bg-white dark:bg-mist-900 border border-mist-200 dark:border-mist-800 overflow-hidden">
          <div class="px-6 py-4 border-b border-mist-200 dark:border-mist-800 bg-mist-50 dark:bg-mist-800/50">
            <h2 class="text-sm font-medium text-mist-600 dark:text-mist-400">19. Screenshot</h2>
          </div>
          <div class="p-6">
            <Screenshot>
              <div class="bg-gradient-to-br from-athena-primary to-emerald-700 h-48 rounded-lg flex items-center justify-center text-white">
                Screenshot Content Area
              </div>
            </Screenshot>
          </div>
        </div>

        <!-- 20. Wallpaper -->
        <div class="rounded-xl bg-white dark:bg-mist-900 border border-mist-200 dark:border-mist-800 overflow-hidden">
          <div class="px-6 py-4 border-b border-mist-200 dark:border-mist-800 bg-mist-50 dark:bg-mist-800/50">
            <h2 class="text-sm font-medium text-mist-600 dark:text-mist-400">20. Wallpaper</h2>
          </div>
          <div class="p-6">
            <div class="h-48 relative overflow-hidden rounded-lg">
              <Wallpaper />
              <div class="absolute inset-0 flex items-center justify-center">
                <Text>Content over Wallpaper</Text>
              </div>
            </div>
          </div>
        </div>

      </div>
      
      <!-- Footer Navigation -->
      <div class="mt-16 text-center">
        <p class="text-mist-600 dark:text-mist-400 mb-6">20/20 Element Components Rendered</p>
        <div class="flex gap-4 justify-center">
          <a href="/showcase/" class="px-6 py-3 rounded-lg border border-mist-300 dark:border-mist-700 text-mist-700 dark:text-mist-300 hover:bg-mist-100 dark:hover:bg-mist-800 transition-colors">
            Back to Index
          </a>
          <a href="/showcase/sections" class="px-6 py-3 rounded-lg bg-athena-primary text-white hover:bg-athena-accent transition-colors">
            View Sections →
          </a>
        </div>
      </div>
    </main>
  </div>
</Base>
