---
import Base from '../../layouts/Base.astro'

// ALL 10 Catalyst Components - Static Imports
import AuthLayout from '../../../components/catalyst/auth-layout.astro'
import DescriptionDetails from '../../../components/catalyst/description-details.astro'
import DescriptionList from '../../../components/catalyst/description-list.astro'
import DescriptionTerm from '../../../components/catalyst/description-term.astro'
import Divider from '../../../components/catalyst/divider.astro'
import CatalystHeading from '../../../components/catalyst/heading.astro'
import CatalystLink from '../../../components/catalyst/link.astro'
import Pagination from '../../../components/catalyst/pagination.astro'
import CatalystSubheading from '../../../components/catalyst/subheading.astro'
import CatalystText from '../../../components/catalyst/text.astro'
---

<Base title="Showcase - All 10 Catalyst Components">
  <div class="min-h-screen bg-mist-100 dark:bg-mist-950">
    <!-- Header -->
    <header class="border-b border-mist-200 dark:border-mist-800 bg-white dark:bg-mist-900">
      <div class="max-w-7xl mx-auto px-6 py-8">
        <nav class="mb-4">
          <a href="/showcase/" class="text-sm text-mist-600 dark:text-mist-400 hover:text-athena-primary dark:hover:text-white transition-colors">
            ← Back to Showcase
          </a>
        </nav>
        <h1 class="font-display text-4xl text-athena-primary dark:text-white tracking-tight">
          Catalyst Components
        </h1>
        <p class="mt-2 text-mist-600 dark:text-mist-400 font-sans">
          All 10 Catalyst UI Kit components
        </p>
      </div>
    </header>

    <!-- Main Content -->
    <main class="max-w-7xl mx-auto px-6 py-12">
      <div class="grid gap-8">
        
        <!-- 1. CatalystHeading -->
        <div class="rounded-xl bg-white dark:bg-mist-900 border border-mist-200 dark:border-mist-800 overflow-hidden">
          <div class="px-6 py-4 border-b border-mist-200 dark:border-mist-800 bg-mist-50 dark:bg-mist-800/50">
            <h2 class="text-sm font-medium text-mist-600 dark:text-mist-400">1. Heading (Catalyst)</h2>
          </div>
          <div class="p-6">
            <CatalystHeading>Catalyst Heading Component</CatalystHeading>
          </div>
        </div>

        <!-- 2. CatalystSubheading -->
        <div class="rounded-xl bg-white dark:bg-mist-900 border border-mist-200 dark:border-mist-800 overflow-hidden">
          <div class="px-6 py-4 border-b border-mist-200 dark:border-mist-800 bg-mist-50 dark:bg-mist-800/50">
            <h2 class="text-sm font-medium text-mist-600 dark:text-mist-400">2. Subheading (Catalyst)</h2>
          </div>
          <div class="p-6">
            <CatalystSubheading>Catalyst Subheading Component</CatalystSubheading>
          </div>
        </div>

        <!-- 3. CatalystText -->
        <div class="rounded-xl bg-white dark:bg-mist-900 border border-mist-200 dark:border-mist-800 overflow-hidden">
          <div class="px-6 py-4 border-b border-mist-200 dark:border-mist-800 bg-mist-50 dark:bg-mist-800/50">
            <h2 class="text-sm font-medium text-mist-600 dark:text-mist-400">3. Text (Catalyst)</h2>
          </div>
          <div class="p-6">
            <CatalystText>This is the Catalyst Text component for body content.</CatalystText>
          </div>
        </div>

        <!-- 4. CatalystLink -->
        <div class="rounded-xl bg-white dark:bg-mist-900 border border-mist-200 dark:border-mist-800 overflow-hidden">
          <div class="px-6 py-4 border-b border-mist-200 dark:border-mist-800 bg-mist-50 dark:bg-mist-800/50">
            <h2 class="text-sm font-medium text-mist-600 dark:text-mist-400">4. Link (Catalyst)</h2>
          </div>
          <div class="p-6">
            <CatalystLink href="#">Catalyst Link Component</CatalystLink>
          </div>
        </div>

        <!-- 5. Divider -->
        <div class="rounded-xl bg-white dark:bg-mist-900 border border-mist-200 dark:border-mist-800 overflow-hidden">
          <div class="px-6 py-4 border-b border-mist-200 dark:border-mist-800 bg-mist-50 dark:bg-mist-800/50">
            <h2 class="text-sm font-medium text-mist-600 dark:text-mist-400">5. Divider</h2>
          </div>
          <div class="p-6">
            <p class="mb-4 text-mist-700 dark:text-mist-300">Content above divider</p>
            <Divider />
            <p class="mt-4 text-mist-700 dark:text-mist-300">Content below divider</p>
          </div>
        </div>

        <!-- 6. DescriptionList -->
        <div class="rounded-xl bg-white dark:bg-mist-900 border border-mist-200 dark:border-mist-800 overflow-hidden">
          <div class="px-6 py-4 border-b border-mist-200 dark:border-mist-800 bg-mist-50 dark:bg-mist-800/50">
            <h2 class="text-sm font-medium text-mist-600 dark:text-mist-400">6. DescriptionList</h2>
          </div>
          <div class="p-6">
            <DescriptionList>
              <DescriptionTerm>Term 1</DescriptionTerm>
              <DescriptionDetails>Details for term 1</DescriptionDetails>
              <DescriptionTerm>Term 2</DescriptionTerm>
              <DescriptionDetails>Details for term 2</DescriptionDetails>
            </DescriptionList>
          </div>
        </div>

        <!-- 7. DescriptionTerm -->
        <div class="rounded-xl bg-white dark:bg-mist-900 border border-mist-200 dark:border-mist-800 overflow-hidden">
          <div class="px-6 py-4 border-b border-mist-200 dark:border-mist-800 bg-mist-50 dark:bg-mist-800/50">
            <h2 class="text-sm font-medium text-mist-600 dark:text-mist-400">7. DescriptionTerm</h2>
          </div>
          <div class="p-6">
            <DescriptionTerm>Standalone Description Term</DescriptionTerm>
          </div>
        </div>

        <!-- 8. DescriptionDetails -->
        <div class="rounded-xl bg-white dark:bg-mist-900 border border-mist-200 dark:border-mist-800 overflow-hidden">
          <div class="px-6 py-4 border-b border-mist-200 dark:border-mist-800 bg-mist-50 dark:bg-mist-800/50">
            <h2 class="text-sm font-medium text-mist-600 dark:text-mist-400">8. DescriptionDetails</h2>
          </div>
          <div class="p-6">
            <DescriptionDetails>Standalone Description Details content</DescriptionDetails>
          </div>
        </div>

        <!-- 9. Pagination -->
        <div class="rounded-xl bg-white dark:bg-mist-900 border border-mist-200 dark:border-mist-800 overflow-hidden">
          <div class="px-6 py-4 border-b border-mist-200 dark:border-mist-800 bg-mist-50 dark:bg-mist-800/50">
            <h2 class="text-sm font-medium text-mist-600 dark:text-mist-400">9. Pagination</h2>
          </div>
          <div class="p-6">
            <Pagination 
              currentPage={3}
              totalPages={10}
              baseUrl="/showcase/catalyst"
            />
          </div>
        </div>

        <!-- 10. AuthLayout -->
        <div class="rounded-xl bg-white dark:bg-mist-900 border border-mist-200 dark:border-mist-800 overflow-hidden">
          <div class="px-6 py-4 border-b border-mist-200 dark:border-mist-800 bg-mist-50 dark:bg-mist-800/50">
            <h2 class="text-sm font-medium text-mist-600 dark:text-mist-400">10. AuthLayout</h2>
          </div>
          <div class="p-6">
            <div class="bg-mist-100 dark:bg-mist-800 rounded-lg overflow-hidden max-h-96">
              <AuthLayout>
                <div class="p-8 text-center">
                  <h3 class="text-xl font-display text-athena-primary dark:text-white mb-4">Auth Form Area</h3>
                  <p class="text-mist-600 dark:text-mist-400">Login/Register form would go here</p>
                </div>
              </AuthLayout>
            </div>
          </div>
        </div>

      </div>
      
      <!-- Footer Navigation -->
      <div class="mt-16 text-center">
        <p class="text-mist-600 dark:text-mist-400 mb-6">10/10 Catalyst Components Rendered</p>
        <div class="flex gap-4 justify-center">
          <a href="/showcase/sections" class="px-6 py-3 rounded-lg border border-mist-300 dark:border-mist-700 text-mist-700 dark:text-mist-300 hover:bg-mist-100 dark:hover:bg-mist-800 transition-colors">
            ← View Sections
          </a>
          <a href="/showcase/icons" class="px-6 py-3 rounded-lg bg-athena-primary text-white hover:bg-athena-accent transition-colors">
            View Icons →
          </a>
        </div>
      </div>
    </main>
  </div>
</Base>
