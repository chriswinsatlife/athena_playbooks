---
import Base from '../layouts/Base.astro';
import Notifications from '../components/Notifications.astro';
---

<Base title="Notifications Component Demo">
  <main class="p-8 space-y-12 max-w-4xl mx-auto">
    <h1 class="text-3xl font-heading font-bold">Notifications Component Demo</h1>

    <section>
      <h2 class="text-xl font-semibold mb-4">Liquid Glass (macOS 26 / iOS 26) - With Background Image</h2>
      <Notifications
        style="liquidglass"
        background="https://images.unsplash.com/photo-1579380656108-f98e4df8ea62?q=80&w=800&auto=format&fit=crop"
        notifications={[
          { 
            app: "Slack", 
            title: "#engineering", 
            body: "Alex: Can someone review my PR?", 
            time: "now",
            icon: "https://cdn.brandfetch.io/idAFahCUN9/w/400/h/400/theme/dark/icon.png?c=1dxbfHSJFAPEGdCLU4o5B"
          },
          { 
            app: "Gmail", 
            title: "New message from Lisa", 
            body: "Re: Q4 Planning - sounds good!", 
            time: "2m ago",
            icon: "https://cdn.brandfetch.io/idnrCPuv87/w/400/h/400/theme/dark/icon.jpeg?c=1dxbfHSJFAPEGdCLU4o5B"
          }
        ]}
      />
    </section>

    <section>
      <h2 class="text-xl font-semibold mb-4">Liquid Glass - Light Mode</h2>
      <Notifications
        style="liquidglass"
        mode="light"
        background="https://images.unsplash.com/photo-1506905925346-21bda4d32df4?q=80&w=800&auto=format&fit=crop"
        notifications={[
          { 
            app: "Google Calendar", 
            title: "Meeting in 15 minutes", 
            body: "Weekly Sync with Product Team", 
            time: "now",
            icon: "https://cdn.brandfetch.io/id6dQiJaLw/w/400/h/400/theme/dark/icon.png?c=1dxbfHSJFAPEGdCLU4o5B"
          },
          { 
            app: "WhatsApp", 
            title: "Sarah", 
            body: "Are we still on for lunch tomorrow?", 
            time: "3m ago",
            icon: "https://cdn.brandfetch.io/idZdZ4yCBb/w/400/h/400/theme/dark/icon.png?c=1dxbfHSJFAPEGdCLU4o5B"
          }
        ]}
      />
    </section>

    <section>
      <h2 class="text-xl font-semibold mb-4">Liquid Glass - Gradient Background</h2>
      <Notifications
        style="liquidglass"
        background="linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f64f59 100%)"
        notifications={[
          { 
            app: "ChatGPT", 
            title: "Response ready", 
            body: "Your code review is complete", 
            time: "now",
            icon: "https://cdn.brandfetch.io/idR3duQxYl/w/400/h/400/theme/dark/icon.png?c=1dxbfHSJFAPEGdCLU4o5B"
          },
          { 
            app: "Figma", 
            title: "Design update", 
            body: "Alex made changes to Homepage v2", 
            time: "5m ago",
            icon: "https://cdn.brandfetch.io/idZHcZ_i7F/w/400/h/400/theme/dark/icon.png?c=1dxbfHSJFAPEGdCLU4o5B"
          }
        ]}
      />
    </section>

    <section>
      <h2 class="text-xl font-semibold mb-4">With Custom Icons</h2>
      <Notifications
        style="macos"
        mode="dark"
        notifications={[
          { 
            app: "Slack", 
            title: "#engineering", 
            body: "Alex: Can someone review my PR?", 
            time: "now",
            icon: "https://cdn.brandfetch.io/idAFahCUN9/w/400/h/400/theme/dark/icon.png?c=1dxbfHSJFAPEGdCLU4o5B"
          },
          { 
            app: "WhatsApp", 
            title: "Sarah", 
            body: "Are we still on for lunch tomorrow?", 
            time: "1m ago",
            icon: "https://cdn.brandfetch.io/idZdZ4yCBb/w/400/h/400/theme/dark/icon.png?c=1dxbfHSJFAPEGdCLU4o5B"
          },
          { 
            app: "Google Calendar", 
            title: "Meeting in 15 minutes", 
            body: "Weekly Sync with Product Team", 
            time: "2m ago",
            icon: "https://cdn.brandfetch.io/id6dQiJaLw/w/400/h/400/theme/dark/icon.png?c=1dxbfHSJFAPEGdCLU4o5B"
          },
          { 
            app: "Google Docs", 
            title: "New comment from Alex", 
            body: "Can we revisit this section?", 
            time: "3m ago",
            icon: "https://cdn.brandfetch.io/idJz-FuJWL/w/400/h/400/theme/dark/icon.png?c=1dxbfHSJFAPEGdCLU4o5B"
          },
          { 
            app: "Gmail", 
            title: "New message from Lisa", 
            body: "Re: Q4 Planning - sounds good!", 
            time: "5m ago",
            icon: "https://cdn.brandfetch.io/idnrCPuv87/w/400/h/400/theme/dark/icon.jpeg?c=1dxbfHSJFAPEGdCLU4o5B"
          },
          { 
            app: "ChatGPT", 
            title: "Response ready", 
            body: "Your code review is complete", 
            time: "8m ago",
            icon: "https://cdn.brandfetch.io/idR3duQxYl/w/400/h/400/theme/dark/icon.png?c=1dxbfHSJFAPEGdCLU4o5B"
          },
          { 
            app: "Figma", 
            title: "Design update", 
            body: "Alex made changes to Homepage v2", 
            time: "10m ago",
            icon: "https://cdn.brandfetch.io/idZHcZ_i7F/w/400/h/400/theme/dark/icon.png?c=1dxbfHSJFAPEGdCLU4o5B"
          },
          { 
            app: "GitHub", 
            title: "CI passed", 
            body: "All checks passed on main", 
