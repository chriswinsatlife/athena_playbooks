      <Notifications
        style="ios"
        mode="light"
        notifications={[
          { app: "Photos", title: "Memory Ready", body: "Trip to the mountains - 2 years ago", time: "1h ago" },
          { app: "News", title: "Breaking News", body: "Major announcement expected today", time: "15m ago" }
        ]}
      />
    </section>

    <section>
      <h2 class="text-xl font-semibold mb-4">Android Style (Material You) - Dark</h2>
      <Notifications
        style="android"
        mode="dark"
        notifications={[
          { app: "Gmail", title: "New email from Alex", body: "Hey, can we reschedule our meeting?", time: "3m ago" },
          { app: "YouTube", title: "New video uploaded", body: "Your favorite channel posted a new video", time: "1h ago" }
        ]}
      />
    </section>

    <section>
      <h2 class="text-xl font-semibold mb-4">Android Style - Light</h2>
      <Notifications
        style="android"
        mode="light"
        notifications={[
          { app: "Maps", title: "Traffic update", body: "Accident on your usual route", time: "5m ago" },
          { app: "Drive", title: "Shared document", body: "Alex shared 'Q4 Report' with you", time: "20m ago" }
        ]}
      />
    </section>

    <section>
      <h2 class="text-xl font-semibold mb-4">Windows 11 Style - Dark</h2>
      <Notifications
        style="windows"
        mode="dark"
        notifications={[
          { app: "Teams", title: "New message", body: "Sarah: Can you review my PR?", time: "now" },
          { app: "Outlook", title: "Meeting reminder", body: "Design review in 15 minutes", time: "14m" }
        ]}
      />
    </section>

    <section>
      <h2 class="text-xl font-semibold mb-4">Windows 11 Style - Light</h2>
      <Notifications
        style="windows"
        mode="light"
        notifications={[
          { app: "Edge", title: "Download complete", body: "report.pdf finished downloading", time: "just now" },
          { app: "Settings", title: "Update available", body: "Windows 11 24H2 is ready to install", time: "1h ago" }
        ]}
      />
    </section>
  </main>
</Base>
